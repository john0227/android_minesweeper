<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout_custom_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/custom_dialog_shade"
    tools:context=".activity.fragment.nav.HomeFragment" >

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/alert_dialog_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="New Game"
                android:textSize="16dp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:alpha="0.5"
                android:background="@color/my_primary_purple" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/ibtn_level_easy"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"
                    android:adjustViewBounds="true"
                    android:background="@null"
                    android:padding="12dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="-8dp"
                    android:scaleType="fitCenter"
                    android:tag="EASY"
                    app:srcCompat="@drawable/ic_easy" />

                <Button
                    android:id="@+id/btn_level_easy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8.5"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:paddingStart="5dp"
                    android:tag="EASY"
                    android:text="Easy"
                    android:textColor="@color/my_primary_purple" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/ibtn_level_easy4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"
                    android:adjustViewBounds="true"
                    android:background="@null"
                    android:padding="12dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="-8dp"
                    android:scaleType="fitCenter"
                    android:tag="INTERMEDIATE"
                    app:srcCompat="@drawable/ic_intermediate" />

                <Button
                    android:id="@+id/btn_level_easy4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8.5"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:paddingStart="5dp"
                    android:tag="INTERMEDIATE"
                    android:text="Intermediate"
                    android:textColor="@color/my_primary_purple" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/ibtn_level_easy5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"
                    android:adjustViewBounds="true"
                    android:background="@null"
                    android:padding="12dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="-8dp"
                    android:scaleType="fitCenter"
                    android:tag="EXPERT"
                    app:srcCompat="@drawable/ic_expert" />

                <Button
                    android:id="@+id/btn_level_easy5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8.5"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:paddingStart="5dp"
                    android:tag="EXPERT"
                    android:text="Expert"
                    android:textColor="@color/my_primary_purple" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/ibtn_level_easy7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"
                    android:adjustViewBounds="true"
                    android:background="@null"
                    android:padding="12dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="-8dp"
                    android:scaleType="fitCenter"
                    android:tag="JUMBO"
                    app:srcCompat="@drawable/ic_jumbo" />

                <Button
                    android:id="@+id/btn_level_easy7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8.5"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:paddingStart="5dp"
                    android:tag="JUMBO"
                    android:text="Jumbo"
                    android:textColor="@color/my_primary_purple" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/ibtn_level_easy6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"
                    android:adjustViewBounds="true"
                    android:background="@null"
                    android:padding="12dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="-8dp"
                    android:scaleType="fitCenter"
                    android:tag="CUSTOM"
                    app:srcCompat="@drawable/ic_custom" />

                <Button
                    android:id="@+id/btn_level_easy6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8.5"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:paddingStart="5dp"
                    android:tag="CUSTOM"
                    android:text="Custom"
                    android:textColor="@color/my_primary_purple" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>