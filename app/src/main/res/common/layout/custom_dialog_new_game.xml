<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/customDialog_new_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0"
    android:background="@color/custom_dialog_shade"
    tools:context=".activity.fragment.nav.HomeFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_level_dialog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/alert_dialog_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="New Game"
                android:textSize="16dp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:alpha="0.5"
                android:background="@color/my_primary_purple" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <ImageButton
                    android:id="@+id/ibtn_level_easy"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@null"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_easy"
                    android:tag="EASY" />

                <Button
                    android:id="@+id/btn_level_easy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8.5"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:paddingStart="5dp"
                    android:tag="EASY"
                    android:text="Easy"
                    android:textColor="@color/my_primary_purple" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <ImageButton
                    android:id="@+id/ibtn_level_intermediate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@null"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    android:tag="INTERMEDIATE"
                    android:src="@drawable/ic_intermediate" />

                <Button
                    android:id="@+id/btn_level_intermediate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8.5"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:paddingStart="5dp"
                    android:tag="INTERMEDIATE"
                    android:text="Intermediate"
                    android:textColor="@color/my_primary_purple" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <ImageButton
                    android:id="@+id/ibtn_level_expert"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@null"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    android:tag="EXPERT"
                    android:src="@drawable/ic_expert" />

                <Button
                    android:id="@+id/btn_level_expert"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8.5"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:paddingStart="5dp"
                    android:tag="EXPERT"
                    android:text="Expert"
                    android:textColor="@color/my_primary_purple" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <ImageButton
                    android:id="@+id/ibtn_level_jumbo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@null"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    android:tag="JUMBO"
                    android:src="@drawable/ic_jumbo" />

                <Button
                    android:id="@+id/btn_level_jumbo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8.5"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:paddingStart="5dp"
                    android:tag="JUMBO"
                    android:text="Jumbo"
                    android:textColor="@color/my_primary_purple" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="20dp">

                <ImageButton
                    android:id="@+id/ibtn_level_custom"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="@null"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    android:tag="CUSTOM"
                    android:src="@drawable/ic_custom" />

                <Button
                    android:id="@+id/btn_level_custom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8.5"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:paddingStart="5dp"
                    android:tag="CUSTOM"
                    android:text="Custom"
                    android:textColor="@color/my_primary_purple" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_remove_custom_dialog"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@null"
        app:layout_constraintBottom_toTopOf="@+id/cardView_level_dialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>