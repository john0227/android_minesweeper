<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center_vertical"
    android:padding="5dp">

    <ImageView
        android:id="@+id/iv_history"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="2dp"
        android:tint="@color/icon_tint_purple"
        app:srcCompat="@drawable/games_won" />

    <TextView
        android:id="@+id/tv_rank_history"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/text_level_base"
        android:textSize="16dp"
        android:textStyle="bold"
        tools:text="1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="vertical"
        android:paddingStart="10dp">

        <TextView
            android:id="@+id/tv_date_history"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:textColor="@color/text_level_1"
            android:textSize="15dp"
            tools:text="April 16, 2022 00:00 AM" />

        <TextView
            android:id="@+id/tv_level_dim_custom"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center_vertical"
            android:textColor="@color/text_level_1"
            android:textSize="11dp"
            tools:text="10 by 10 Board (10 Mines)" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_time_history"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:gravity="center_vertical|end"
        android:textColor="@color/text_level_1"
        android:textSize="15dp"
        android:textStyle="bold"
        tools:text="10:10:100" />
</LinearLayout>